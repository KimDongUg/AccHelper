# Application
APP_ENV=development
DEBUG=true

# Database
# DATABASE_URL=sqlite:///data/acchelper.db

# Security
SECRET_KEY=acc-helper-secret-key-change-in-production
SESSION_EXPIRE_HOURS=24

# CORS (comma-separated origins, * for all)
CORS_ORIGINS=*

# Trusted Hosts (comma-separated, leave empty to disable)
# TRUSTED_HOSTS=localhost,example.com

# Rate Limiting
RATE_LIMIT_CHAT=60/minute
RATE_LIMIT_AUTH=30/minute

# Logging
LOG_LEVEL=INFO

# Static files cache max age in seconds
STATIC_CACHE_MAX_AGE=86400
